<% content_for :title, "#{@book.title}" %>

<div class="max-w-7xl mx-auto p-4">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 rounded-lg">
      <p class="text-green-600 font-medium"><%= notice %></p>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @book.title %></h1>
      <%= link_to books_path, class: "mt-2 inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Books
      <% end %>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit Book", edit_book_path(@book), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium flex items-center gap-2" %>
      <%= button_to "Delete Book", @book, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg font-medium flex items-center gap-2" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-1 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-start gap-4 mb-6">
        <div class="flex-shrink-0 p-3 bg-indigo-50 rounded-lg">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Book Information</h2>
          <p class="text-sm text-gray-500">Detailed information about this book</p>
        </div>
      </div>

      <hr class="my-6 border-t border-gray-200">

      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <span class="p-2 bg-white rounded-lg shadow-sm">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </span>
          <div>
            <p class="text-sm font-medium text-gray-500">Title</p>
            <p class="text-gray-900 font-medium"><%= @book.title %></p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <span class="p-2 bg-white rounded-lg shadow-sm">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </span>
          <div>
            <p class="text-sm font-medium text-gray-500">Author</p>
            <p class="text-gray-900"><%= @book.author %></p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <span class="p-2 bg-white rounded-lg shadow-sm">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
            </svg>
          </span>
          <div>
            <p class="text-sm font-medium text-gray-500">ISBN</p>
            <p class="text-gray-900 font-mono"><%= @book.isbn %></p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <span class="p-2 bg-white rounded-lg shadow-sm">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </span>
          <div>
            <p class="text-sm font-medium text-gray-500">Current Status</p>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @book.available? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @book.available? ? "Available" : "Lent" %>
              <% if @book.available? %>
                <svg class="ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              <% else %>
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Lending History
          </h3>
        </div>

        <div class="px-6 py-4">
          <div class="overflow-x-auto rounded-lg border border-gray-100">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Borrower</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Borrowed Date</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Return Date</th>
                  <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% if @book.lendings.any? %>
                  <% @book.lendings.each do |lending| %>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= lending.borrower_name %></td>
                      <td class="px-4 py-3 text-sm text-gray-600"><%= lending.borrowed_at.strftime('%b %d, %Y') %></td>
                      <td class="px-4 py-3 text-sm text-gray-600">
                        <%= lending.returned_at ? lending.returned_at.strftime('%b %d, %Y') : '--' %>
                      </td>
                      <td class="px-4 py-3">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= lending.returned_at ? 'bg-green-100 text-green-800' : 'bg-orange-100 text-orange-800' %>">
                          <%= lending.returned_at ? 'Returned' : 'Active' %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="4" class="px-4 py-6 text-center text-gray-500">
                      No lending records found
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
