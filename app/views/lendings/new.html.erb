<% content_for :title, "New lending" %>

<div class="w-full mx-auto p-4">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 rounded-lg">
      <p class="text-green-600 font-medium"><%= notice %></p>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">New Lending</h1>
      <%= link_to lendings_path, class: "mt-2 inline-flex items-center text-gray-600 hover:text-blue-600 transition-colors" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Lendings
      <% end %>
    </div>
  </div>

  <%= render "form", lending: @lending %>

 
</div>